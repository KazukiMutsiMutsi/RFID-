generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TagStatus {
  unassigned
  assigned
  lost
  disabled
  retired
}

enum TagType {
  student
  worker
  visitor
}

enum OwnerType {
  student
  worker
}

model Tag {
  id        String    @id @default(cuid())
  uid       String    @unique
  status    TagStatus @default(unassigned)
  type      TagType
  ownerId   String?
  ownerType OwnerType?
  issuedAt  DateTime? @default(now())
  revokedAt DateTime?
  lastSeen  DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([status])
  @@index([type])
}
